{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "selector-class-pattern": "^(?!component-)[a-z][a-z0-9-]*$|^component-[A-Z][a-zA-Z0-9-]+$",
    "block-no-empty": null,
    "declaration-empty-line-before": [
      "never",
      {
        "ignore": ["after-declaration", "first-nested"]
      }
    ]
  }
}
